                  pt.X("2012").Y(10000).Add();
                  pt.X("2013").Y(20000).Add();
              }).Name("Область 2").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(15000).Add();
                  pt.X("2013").Y(25000).Add();
              }).Name("Область 3").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(6000).Add();
                  pt.X("2013").Y(60000).Add();
              }).Name("Область 4").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(17000).Add();
                  pt.X("2013").Y(37000).Add();
              }).Name("Область 5").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(19000).Add();
                  pt.X("2013").Y(29000).Add();
              }).Name("Область 6").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(39000).Add();
                  pt.X("2013").Y(35000).Add();
              }).Name("Область 7").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(17000).Add();
                  pt.X("2013").Y(38000).Add();
              }).Name("Область 8").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(13000).Add();
                  pt.X("2013").Y(15000).Add();
              }).Name("Область 9").Add();
              sr.Points(pt =>
              {
                  pt.X("2012").Y(36000).Add();
                  pt.X("2013").Y(18000).Add();
              }).Name("Область 10").Add();
              
          })
          .Load("loadTheme")
                          //.Axes(ax =>
                          //        {
                          //            ax.MajorGridLines(mj => mj.Visible(false)).CrosshairLabel(chAxes => chAxes.Visible(true)).Orientation("Horizontal").Name("xAxis1").ValueType(AxisValueType.Datetime).LabelRotation(90).Add();
                          //            ax.MajorGridLines(mj => mj.Visible(false)).LabelFormat("{value}mm").CrosshairLabel(seAxes => seAxes.Visible(true)).Orientation("Vertical").OpposedPosition(true).Range(rg => rg.Min(0).Max(150).Interval(20)).Name("yAxis").Add();
                          //        })
          .Crosshair(cr => cr.Visible(true).Type(CrosshairType.Crosshair))
          //.Zooming(zn=>zn.Enable(true).EnableMouseWheel(true))
