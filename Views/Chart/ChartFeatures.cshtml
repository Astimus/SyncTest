@using ChartTheme = Syncfusion.JavaScript.DataVisualization.ChartTheme
@{
    ViewBag.Title = "Chart";
    ViewData["ProductName"] = "Chart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chart Features:</h2><br />
<li> Chart Types - Bar Chart</li>
<li> Zooming</li>
<li> Tooltip</li>
<li> CrossHair</li>
<li> Theme - Default-theme</li>
<br />
<h2>Chart</h2><br />
<div>
    @(Html.EJ().Chart("container")
          .PrimaryXAxis(pr => pr.Title(tl => tl.Text("Отчет")).CrosshairLabel(seAxes => seAxes.Visible(true)).Range(ra => ra.Min(2011).Max(2014).Interval(1)).LabelRotation(45))
          .PrimaryYAxis(pr => pr.Range(ra => ra.Max(60000).Min(0).Interval(10000)).Font((fn => fn.Size("15px").FontFamily("Segoe UI"))))
          .CommonSeriesOptions(cr => cr.Type(SeriesType.Bar).EnableAnimation(true).Tooltip(sr1 => sr1.Visible(true).Format("#series.name# <br/> #point.x# : #point.y#")))
          .Series(sr =>
          {
              sr.Points(pt =>
              {
                  pt.X("2012").Y(10000).Add();
                  pt.X("2013").Y(50000).Add();
              }).Name("Атырауская область").Add();

              sr.Points(pt =>
              {
                  pt.X("2012").Y(10500).Add();
                  pt.X("2013").Y(45000).Add();
              }).Name("Актюбинская область ").Add();

              sr.Points(pt =>
              {
                  pt.X("2012").Y(9700).Add();
                  pt.X("2013").Y(35000).Add();
              }).Name("Алмаатинская область").Add();
              
              //---------------------------------------------------
              sr.Points(pt =>
